<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/style_up.css">
  <style>
    /* Your provided CSS here */
    body {
      /* Add any background styles if needed */
      display: flex;
      justify-content: center;
      align-items: center;
      height: 150vh;
      margin: 0;
    }
    .upload-form {
      width: 90%;
      max-width: 800px;
      padding: 40px;
      background-color: rgba(255, 255, 255, 0.8);
      border-radius: 15px;
    }
    .upload-form h1 {
      font-size: 32px;
      margin-bottom: 30px;
    }
    .form-row {
      display: flex;
      flex-direction: column; /* Change to vertical alignment */
      margin-bottom: 20px;
    }
    .form-row label {
      font-size: 18px;
      color: #999;
      margin-bottom: 5px; /* Add some space below the label */
    }
    .form-row input,
    .form-row textarea {
      width: 100%;
      padding: 15px;
      background-color: transparent;
      border: 1px solid #999;
      font-size: 18px;
      color: #000;
      outline: none;
      resize: vertical;
    }
    .btn-area {
      display: flex;
      justify-content: flex-end;
      align-items: center;
      margin-top: 20px; /* Add some space above the buttons */
    }
    .area {
      display: flex;
      
      margin: auto; /* Add some space above the buttons */
    }
    .btn-area button {
      width: 150px;
      height: 50px;
      background: #166cea;
      color: #fff;
      font-size: 20px;
      border: none;
      cursor: pointer;
      font-family: 'CustomFont', sans-serif;
      border-radius: 30px;
      margin-left: 20px;
    }
    @font-face {
  font-family: 'CustomFont';
  src: url('/css/font.ttf') format('truetype');
}
.upload-form h1 {
  font-size: 32px;
  color: #166cea;
  text-align: center;
  margin-bottom: 20px;
  font-family: 'CustomFont', sans-serif;
}

.RSP {
  width: 100px;
  height: 100px;
  border: 10px solid black;
  margin-right: 30px;
}

#ga {
  text-align: center;
  width: 100%;
  overflow: hidden;
  display: flex; /* 추가 */
  flex-direction: row; /* 추가 */
}
#selected_image_border {
  border: 2px solid red; /* 테두리 스타일 변경 */
}


    /* Rest of your styles */
  </style>
  <title>404 But Found </title>
</head>
<body>
  <div class="upload-form">
    <h1>GAME</h1>
    <form action="/game_make" method="post"  enctype="multipart/form-data">
      <div class="form-row">
        <label for="title">제목(제품명)</label>
        <input type="text" id="title" name="title" required>
      </div>
      <div class="form-row">
        <label for="content">이미지 업로드</label>
        <input type="file" name="image">
      </div>
      <div class="form-row">
        <label for="content">특이사항</label>
        <textarea id="context" name="context" rows="1" required></textarea>
      </div>

      <div class="form-row" >
        <label for="RSP">Your Choice</label><br>
        <div id="ga">
          <input type="hidden" id="selected_image" name="selected_image" value="">
          <input type="image" src="/rsp/rock.png" class="RSP" onClick="selectImage(0, event)">
          <input type="image" src="/rsp/scissros.jpeg" class="RSP" onClick="selectImage(1, event)">
          <input type="image" src="/rsp/paper.png" class="RSP" onClick="selectImage(2, event)">
        </div>
      </div>   
      <div class="btn-area">
        <button type="submit">등록</button>
        <button type="button">취소</button>
      </div>
    </form>
  </div>
</body>
</html>
<script>
    // 모든 이미지 요소들을 가져옵니다.
    
    function selectImage(imageNumber, event) {
      event.preventDefault();
      // 선택된 이미지의 값을 변경
      document.getElementById('selected_image').value = imageNumber;
    
      // 모든 이미지 요소에서 선택 클래스를 제거
      var images = document.getElementsByClassName('RSP');
      for (var i = 0; i < images.length; i++) {
        images[i].removeAttribute('id');
      }
    
      // 클릭된 이미지에 선택 id를 추가
      var clickedImage = document.querySelector('input[type="image"][onClick="selectImage(' + imageNumber + ', event)"]');
      clickedImage.setAttribute('id', 'selected_image_border');
    }
  </script>




